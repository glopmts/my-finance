generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  clerkId       String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime? @updatedAt

  // Relacionamentos
  transactions   Transaction[]
  salaries       Salary[]
  budgets        Budget[]
  Fixed          Fixed[]
  FinancialGoals FinancialGoals[]
}

enum AccountType {
  CHECKING
  SAVINGS
  INVESTMENT
  CREDIT_CARD
  CASH
  OTHER
}

model Transaction {
  id          String              @id @default(cuid())
  amount      Float
  date        DateTime            @default(now())
  description String?
  type        TransactionType     @default(INCOME)
  typeFile    TransactionTypeFile @default(NULL)
  isRecurring Boolean             @default(false)
  isProcessed Boolean             @default(false)
  recurringId String?
  category    CategoryEnum        @default(EDUCATION)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  fixedId       String?
  fixed         Fixed?  @relation(name: "GeneratedTransactions", fields: [fixedId], references: [id])
  originOfFixed Fixed?  @relation(name: "OriginTransaction")

  userId           String
  user             User            @relation(fields: [userId], references: [id])
  FinancialGoals   FinancialGoals? @relation(fields: [financialGoalsId], references: [id])
  financialGoalsId String?

  @@index([userId])
  @@index([date])
}

model Fixed {
  id                    String        @id @default(cuid())
  name                  String
  amount                Float
  frequency             Frequency     @default(MONTHLY)
  nextDueDate           DateTime
  isActive              Boolean       @default(true)
  description           String?
  originId              String        @unique
  origin                Transaction   @relation(name: "OriginTransaction", fields: [originId], references: [id])
  generatedTransactions Transaction[] @relation(name: "GeneratedTransactions")

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([nextDueDate])
}

model FinancialGoals {
  id            String    @id @default(cuid())
  name          String
  targetAmount  Float
  currentAmount Float     @default(0)
  month         Int
  year          Int
  isCompleted   Boolean   @default(false)
  completedAt   DateTime?
  type          GoalType  @default(EXPENSE)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  transactions Transaction[]

  salaryId String?
  salary   Salary? @relation(fields: [salaryId], references: [id])

  @@unique([userId, month, year, type])
  @@index([userId])
  @@index([month, year])
}

enum GoalType {
  EXPENSE
  SAVING
  INVESTMENT
}

model Salary {
  id          String    @id @default(cuid())
  amount      Float
  description String?
  paymentDate DateTime
  isRecurring Boolean   @default(true)
  frequency   Frequency @default(MONTHLY)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId         String
  user           User             @relation(fields: [userId], references: [id])
  FinancialGoals FinancialGoals[]

  @@index([userId])
}

model Budget {
  id        String   @id @default(cuid())
  amount    Float
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum Frequency {
  WEEKLY
  BIWEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
}

enum TransactionTypeFile {
  CSV
  PDF
  NULL
}

enum CategoryEnum {
  TRANSPORTATION
  FOOD
  ACCOMMODATION
  ENTERTAINMENT
  HEALTHCARE
  EDUCATION
  UTILITIES
  INVESTMENTS
  SHOPPING
  OTHER
}
