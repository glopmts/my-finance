generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  clerkId       String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime? @updatedAt

  // Relacionamentos
  transactions   Transaction[]
  salaries       Salary[]
  budgets        Budget[]
  Fixed          Fixed[]
  FinancialGoals FinancialGoals[]
  MonthlyBalance MonthlyBalance[]
  CacreditCard   CreditCard[]
  BankAccount    BankAccount[]

  recurringFolders RecurringFolder[]
}

enum AccountType {
  CHECKING
  SAVINGS
  INVESTMENT
  CREDIT_CARD
  CASH
  OTHER
}

model Transaction {
  id            String              @id @default(cuid())
  amount        Float               @default(0)
  date          DateTime            @default(now())
  description   String?
  type          TransactionType     @default(INCOME)
  typeFile      TransactionTypeFile @default(NULL)
  paymentSource PaymentSource       @default(SALARY)

  isRecurring Boolean      @default(false)
  isProcessed Boolean      @default(false)
  recurringId String?
  category    CategoryEnum @default(EDUCATION)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  fixedId       String?
  fixed         Fixed?  @relation(name: "GeneratedTransactions", fields: [fixedId], references: [id])
  originOfFixed Fixed?  @relation(name: "OriginTransaction")

  userId           String
  user             User              @relation(fields: [userId], references: [id])
  FinancialGoals   FinancialGoals?   @relation(fields: [financialGoalsId], references: [id])
  financialGoalsId String?
  creditCardId     String?
  creditCard       CreditCard?       @relation(fields: [creditCardId], references: [id])
  BankAccount      BankAccount?      @relation(fields: [bankAccountId], references: [id])
  bankAccountId    String?
  recurringFolders RecurringFolder[] @relation("TransactionRecurringFolders")

  @@index([userId])
  @@index([date])
}

model BankAccount {
  id            String      @id @default(cuid())
  name          String
  bankName      String
  accountNumber String?
  finalBalance  Float       @default(0)
  balance       Float       @default(0)
  accountType   AccountType @default(CHECKING)
  isActive      Boolean     @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId         String
  user           User             @relation(fields: [userId], references: [id])
  transactions   Transaction[]
  FinancialGoals FinancialGoals[]

  @@map("bank_accounts")
}

model Fixed {
  id                    String        @id @default(cuid())
  name                  String
  amount                Float
  frequency             Frequency     @default(MONTHLY)
  nextDueDate           DateTime
  isActive              Boolean       @default(true)
  description           String?
  originId              String        @unique
  origin                Transaction   @relation(name: "OriginTransaction", fields: [originId], references: [id])
  generatedTransactions Transaction[] @relation(name: "GeneratedTransactions")

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([nextDueDate])
}

model FinancialGoals {
  id            String    @id @default(cuid())
  name          String
  targetAmount  Float
  currentAmount Float     @default(0)
  month         Int
  year          Int
  isCompleted   Boolean   @default(false)
  completedAt   DateTime?
  type          GoalType  @default(EXPENSE)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  transactions Transaction[]

  salaryId      String?
  salary        Salary?      @relation(fields: [salaryId], references: [id])
  bankAccountId String?
  bankAccount   BankAccount? @relation(fields: [bankAccountId], references: [id])

  @@unique([userId, month, year, type])
  @@index([userId])
  @@index([month, year])
  @@index([bankAccountId])
}

model Salary {
  id          String    @id @default(cuid())
  amount      Float
  description String?
  paymentDate DateTime
  isRecurring Boolean   @default(true)
  frequency   Frequency @default(MONTHLY)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId         String
  user           User             @relation(fields: [userId], references: [id])
  FinancialGoals FinancialGoals[]

  @@index([userId])
}

model Budget {
  id        String   @id @default(cuid())
  amount    Float
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}

model MonthlyBalance {
  id            String   @id @default(cuid())
  month         Int
  year          Int
  balance       Float    @default(0)
  finalBalance  Float    @default(0)
  totalIncome   Float    @default(0)
  totalExpenses Float    @default(0)
  isClosed      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId, month, year])
  @@index([userId])
  @@index([month, year])
}

model CreditCard {
  id             String  @id @default(cuid())
  name           String // Ex: "Nubank", "Itaú"
  lastDigits     String
  creditLimit    Float
  availableLimit Float
  closingDay     Int
  dueDay         Int
  isActive       Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId       String
  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@map("credit_cards")
}

model RecurringFolder {
  id          String       @id @default(cuid())
  name        String
  description String?
  category    CategoryEnum @default(OTHER)
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  frequency   Frequency    @default(MONTHLY)
  color       String?
  updatedAt   DateTime     @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  transactions Transaction[] @relation("TransactionRecurringFolders")

  @@index([userId])
  @@map("recurringFolders")
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum Frequency {
  WEEKLY
  BIWEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
}

enum TransactionTypeFile {
  CSV
  PDF
  NULL
}

enum CategoryEnum {
  TRANSPORTATION
  FOOD
  ACCOMMODATION
  ENTERTAINMENT
  HEALTHCARE
  EDUCATION
  UTILITIES
  INVESTMENTS
  SHOPPING
  OTHER
}

enum PaymentSource {
  SALARY // Salário/conta corrente
  CREDIT_CARD
  CASH
  PIX
  DEBIT_CARD
  INVESTMENT
}

enum GoalType {
  EXPENSE
  SAVING
  INVESTMENT
}
